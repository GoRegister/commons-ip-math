<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.ripe.commons</groupId>
    <artifactId>commons-ip-math-parent</artifactId>
    <version>1.10</version>
    <packaging>pom</packaging>
    <name>RIPE NCC Commons - IP Math</name>

    <distributionManagement>
        <repository>
            <id>ripe-releases</id>
            <name>BA repository (nexus)</name>
            <url>http://${dist.repo.url}/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>bad-public-snapshots</id>
            <name>BA snapshots repository (nexus)</name>
            <url>http://${dist.repo.url}/nexus/content/repositories/snapshots</url>
            <uniqueVersion>true</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <connection>scm:git:ssh://ba-git@git.ripe.net/commons/commons-ip-math</connection>
    </scm>

    <properties>
        <target.jdk>1.6</target.jdk>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <dist.repo.url>nexus.ripe.net</dist.repo.url>
        <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
    </properties>

    <modules>
        <module>commons-ip-math</module>
        <module>commons-ip-math-gwt</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${target.jdk}</source>
                    <target>${target.jdk}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
